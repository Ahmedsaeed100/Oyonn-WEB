@model OyonnBL.DTO.AdminDTO
@{
    /**/

    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <title>:: Nexa Bootstrap 4 Admin::</title>
    <!-- Favicon-->
    <link rel="icon" href="/Content/Cpanel/favicon.ico" type="image/x-icon">
    <!-- Custom Css -->
    <link rel="stylesheet" href="/Content/Cpanel/assets/plugins/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Content/Cpanel/assets/css/main.css">
    <link rel="stylesheet" href="/Content/Cpanel/assets/css/authentication.css">
    <link rel="stylesheet" href="/Content/Cpanel/assets/css/color_skins.css">
</head>
<body class="theme-orange">
    <div class="authentication">
        <div class="card">
            <div class="body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="header slideDown">
                            <div class="logo"><img src="/Content/Cpanel/assets/images/logo.png" alt="Nexa"></div>
                            <h1>لوحة التحكم</h1>
                        </div>
                    </div>
                    @using (Ajax.BeginForm("Login", "Admin", new AjaxOptions
                    {
                        LoadingElementId = "popup",
                        OnFailure = "popupOnFailure()",
                        OnSuccess = "popupOnSuccess()",
                        HttpMethod = "POST",
                    }))
                    {
                        <div class="col-lg-12" id="sign_in">
                            <h5 class="title">تسجيل الدخول</h5>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "Enter the user" })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                                    @* <label class="form-label">Username</label>*@
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Enter the password" })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    @*   <label class="form-label">Password</label>*@
                                </div>
                            </div>
                            <div>
                                <input type="checkbox" name="Remember_Me" id="Remember_Me" class="filled-in chk-col-cyan">
                                <label for="rememberme">Remember Me</label>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <input type="submit" class="btn btn-raised btn-primary waves-effect" value="SIGN IN" />
                        </div>
                        <div class="col-xs-12">
                            <label class="text-danger">@Html.DisplayFor(model => model.UserLoginErrorMassge)</label>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery Core Js -->

    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="/Content/Cpanel/assets/bundles/libscripts.bundle.js"></script>
    <script src="/Content/Cpanel/assets/bundles/vendorscripts.bundle.js"></script>
    <script src="/Content/Cpanel/assets/bundles/mainscripts.bundle.js"></script>



    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
  
    <script src="/Scripts/SwwetAlert2.min.all.js"></script>


</body>
</html>
